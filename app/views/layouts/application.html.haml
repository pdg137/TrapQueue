!!! 5

%html
  %head
    %meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %title= yield(:title) || "TrapQueue"
    = include_stylesheets(:main)
    = include_javascripts(:common)
    = csrf_meta_tag

  %body
    #header
      .container_12.group
        .grid_6.alpha
          %h1= image_tag("cat.png")

        .grid_6.text-right
          %ul#navigation
            %li= link_to("Home", root_path)
            %li= link_to("Jobs", jobs_path)
            %li= link_to("Clients", clients_path)
            %li= link_to("Users", users_path)

            - if user_signed_in?
              / %li== Signed in as #{current_user.email}.
              %li= link_to("Sign out", destroy_user_session_path)
            - else
              %li You are not logged in.
              %li= link_to("Sign in", new_user_session_path)

    #content
      .container_12.group
        - unless flash_messages(flash).blank?
          .grid_12.alpha.omega
            #flash_messages= raw(flash_messages(flash))

        = yield

    #footer
      %p.text-center
        Sponsored by the Las Vegas Ruby Group
